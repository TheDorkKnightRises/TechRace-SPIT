<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/redbull_logo"
                        android:layout_width="256dp"
                        android:layout_height="196dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0px"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:tag="http://www.redbull.com/in/"
                            android:text="Website" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0px"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:tag="https://twitter.com/inredbull"
                            android:text="Twitter" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="196dp"
                        android:layout_height="128dp"
                        android:layout_gravity="center"
                        android:src="@drawable/frapp_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0px"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:tag="http://frapp.in/"
                            android:text="Website" />

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0px"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:tag="https://www.facebook.com/GetFrapp/"
                            android:text="Facebook" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="196dp"
                        android:src="@drawable/moussestruck_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="0px"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:onClick="onClick"
                            android:tag="https://www.facebook.com/moussestruck/"
                            android:text="Facebook" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>